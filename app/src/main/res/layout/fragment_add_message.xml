<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMessageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allMessagesAddLayout"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="InsertYourMessage" />

        <Button
            android:id="@+id/AllMessagesAddBtn"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Add" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This fragment is not implemented, it exists just to show navigation using action bar"/>

</LinearLayout>